block title
  title Products!

block content
  header New Product
  form(method='POST', action="/products/"+product.id enctype="application/x-www-form-urlencoded")
    each val, key in product
      label #{key}
      input(type="hidden" name="_method" value="PUT")
      input(type='text' name=key value='#{val}')
      br
    button.btn.btn-success(type='submit') Submit


