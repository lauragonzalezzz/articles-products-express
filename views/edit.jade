block title
  title Products!

block content
  div
    h2='Product Name: '+product.name
    h3='Item Number: '+product.id
    p='Price: $'+product.price
    p='Quantity: '+product.inventory
  form(method='POST', action="/products/"+product.id enctype="application/x-www-form-urlencoded")
    each val, key in product
      label(for='') #{key}
      input(type="hidden" name="_method" value="PUT")
      input(type='text' name=key value='#{val}')
      br
    button.btn.btn-success(type='submit') Submit


