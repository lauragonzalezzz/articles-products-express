block title
  title New Article

block content
  header New Article
  form(method='POST', action="/articles" enctype="application/x-www-form-urlencoded")
    label Article Title
    input(type='text' name="title" placeholder="Article Title")
    br
    label Author
    input(type='text' name="author" placeholder="Article Author")
    br
    label Body
    input(type='textarea' name="body" placeholder="Article Body")
    br
    button.btn.btn-success(type='submit') Submit